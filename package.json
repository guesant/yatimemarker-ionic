{
  "name": "root",
  "private": true,
  "dependencies": {
    "husky": "^4.3.5",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0"
  },
  "scripts": {
    "format": "prettier **/*.{js,ts,jsx,tsx,json,md,html} --write",
    "pretty": "pretty-quick --staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm run pretty"
    }
  }
}
